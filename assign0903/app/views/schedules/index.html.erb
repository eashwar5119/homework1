<h1>Listing schedules</h1>
<br>
<a href="/schedules?order=support_id">order by supports</a> 
<br>
<a href="/schedules?today=support_id">today support hero</a> 
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Support</th>
      <th>Date</th>
      <th>Vacation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.Support.name %></td>
        <td><%= schedule.Date %></td>
        <td><%= schedule.vacation %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

